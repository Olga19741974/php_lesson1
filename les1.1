var words = ["javascript", "neighbour", "crossroads", "unbelivable", "synchronous", "technology", "metallica", "undefined", "collaboration"];

var secretWord = words[Math.floor(Math.random() * words.length)];



var man = document.getElementById("man");
var word = document.getElementById("word");
var userInput = document.querySelector("#user-input > input");
var btn = document.querySelector("#user-input > button"); //внутри

for (var i = 0; i < secretWord.length; i++) {
    var elem = document.createElement("span");
    elem.textContent = "_";
    word.appendChild(elem);
}

var spans = document.getElementsByTagName("span");




btn.onclick = function () {
    for (var i = 0; i < secretWord.length; i++) {
        if (userInput.value.toLowerCase() === secretWord[i]) {
            spans[i].textContent = userInput.value.toLowerCase();  //            меняем нижнее подчеркивание на букву
            
            
            var isGameFinished = true;
            for (var j =0; j < spans.length; j++) {
                if (spans[j].textContent === "_") {
                    isGameFinished = false;
                }
            }
            
            if (isGameFinished === true) {
                document.body.style.background = "#1ec50b";
                alert("You win!");
                btn.onclick = null;
                return;
                }
            /*if (spans.indexOf("_") < 0) {
